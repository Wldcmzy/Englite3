<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.More">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="功能列表"
            android:textAlignment="center"
            android:layout_margin="10dp"
            android:textSize="35dp"
            ></TextView>

        <TextView
            android:id="@+id/func_import_local"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="从本地导入词库"
            android:textAlignment="center"
            android:layout_margin="10dp"
            android:textSize="20dp"
            android:background="@color/teal_200"
            android:padding="10dp"
            ></TextView>

        <TextView
            android:id="@+id/func_import_usercloud"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="从云端导入用户词库"
            android:textAlignment="center"
            android:layout_margin="10dp"
            android:textSize="20dp"
            android:background="@color/teal_200"
            android:padding="10dp"
            ></TextView>

        <TextView
            android:id="@+id/func_import_cloud"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="从云端导入原始词库"
            android:textAlignment="center"
            android:layout_margin="10dp"
            android:textSize="20dp"
            android:background="@color/teal_200"
            android:padding="10dp"
            ></TextView>

        <TextView
            android:id="@+id/func_cloud_setting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="更改云端配置"
            android:textAlignment="center"
            android:layout_margin="10dp"
            android:textSize="20dp"
            android:background="@color/custom_red_1"
            android:padding="10dp"
            ></TextView>

        <TextView
            android:id="@+id/func_cloud_userinfo_setting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="更改用户信息配置"
            android:textAlignment="center"
            android:layout_margin="10dp"
            android:textSize="20dp"
            android:background="@color/custom_red_1"
            android:padding="10dp"
            ></TextView>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>